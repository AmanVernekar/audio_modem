import numpy as np
import matplotlib.pyplot as plt

# Define the time vector
t = np.linspace(0, 10, 1000)  # time from 0 to 10 seconds, 1000 points

# Define the impulse response function
def impulse_response(t, tau_rise=0.1, tau_decay=1):
    return np.exp(-t / tau_decay) * (1 - np.exp(-t / tau_rise))

# Compute the impulse response
h = impulse_response(t)

shifted_array = np.roll(h, -75)

# Plot the impulse response
plt.figure(figsize=(10, 5))
plt.plot(t, shifted_array)
# plt.title('Smooth Impulse Response')
plt.xlabel('Time')
plt.ylabel('Amplitude')

plt.xticks([])  # Remove x-axis numbers
plt.yticks([])  # Remove y-axis numbers

# Remove the box surrounding the plot
for spine in plt.gca().spines.values():
    spine.set_visible(False)

plt.legend()
plt.show()

